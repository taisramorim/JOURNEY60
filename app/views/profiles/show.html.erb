<div class="container">
  <%= link_to 'Back', journeys_path, class: "back-btn mt-4" %>
  <div class="row justify-content-center rounded-5 p-4 col-lg-5 col-md-6 col-sm-8 mx-auto" style="background-color: #b0b9db;">
    <h2><%= "#{current_user.first_name} #{current_user.last_name}" %></h2>
    <div class="my-3 mx-auto">
      <%= cl_image_tag @user.photo.key, class: "avatar-large d-block mx-auto"  %>
    </div>
    <p><strong>Username:</strong> <%= "#{current_user.username}" %> </p>
    <p><strong>Email:</strong> <%= "#{current_user.email}" %> </p>
    <p><strong>Career:</strong> <%= "#{current_user.career}" %> </p>
    <%= link_to 'Edit Profile', edit_profile_path, class: "btn" %>
  </div>
</div>
